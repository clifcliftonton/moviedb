@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/registercontroller")
<br />
<header class="intro" ng-controller="RegisterController">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <form ng-submit="register()">
                        <div class="form-group">
                            <label for="userName">User Name:</label>
                            <input type="text" class="form-control" ng-model="registerForm.username" id="userName" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" ng-model="registerForm.password" />
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password:</label>
                            <input type="password" class="form-control" id="confirmPassword" ng-model="registerForm.confirmPassword" />
                        </div>
                        <br />
                        <button type="submit" class="btn btn-default">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>